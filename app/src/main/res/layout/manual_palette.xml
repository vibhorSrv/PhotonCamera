<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manual_mode"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/knob_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttons_container"
    >
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttons_container"
            android:paddingBottom="15dp"
            android:background="@color/panel_transparency"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/knob_container"
            app:layout_constraintEnd_toEndOf="parent"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/focus_button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/shutter_button_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/focus_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                app:layout_constraintBottom_toTopOf="@id/focus_option_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/focus_option_tv"
                app:srcCompat="@drawable/manual_control_icon_focus" />

            <TextView
                android:id="@+id/focus_option_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:textColor="@color/manual_text_color"
                tools:textColor="@color/White"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/focus_option"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="NULL"
                android:textAlignment="center"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/shutter_button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iso_button_container"
            app:layout_constraintStart_toEndOf="@id/focus_button_container"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/exposure_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exposure_option_tv"
                app:srcCompat="@drawable/manual_control_icon_exposure" />

            <TextView
                android:id="@+id/exposure_option_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:textColor="@color/manual_text_color"
                tools:textColor="@color/White"
                android:textIsSelectable="true"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/exposure_option"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textAlignment="center"
                tools:text="NULL" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/iso_button_container"
                app:layout_constraintStart_toEndOf="@id/shutter_button_container"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ev_button_container"

        >
            <ImageButton android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintEnd_toEndOf="parent"
                         app:layout_constraintTop_toBottomOf="@id/iso_option_tv"
                         app:layout_constraintBottom_toBottomOf="parent"
                         android:id="@+id/iso_option"
                         app:srcCompat="@drawable/manual_control_icon_iso"
                         android:layout_gravity="center"
                         android:background="#00000000"/>
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintBottom_toTopOf="@id/iso_option"
                      app:layout_constraintTop_toTopOf="parent"
                      tools:text="NULL"
                      android:paddingTop="5dp"
                      android:textColor="@color/manual_text_color"
                      tools:textColor="@color/White"
                      android:id="@+id/iso_option_tv"
                      android:layout_gravity="center"
                      android:textAlignment="center"
                      android:textSize="15sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/ev_button_container"
                app:layout_constraintStart_toEndOf="@id/iso_button_container"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

        >
            <ImageButton android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintEnd_toEndOf="parent"
                         app:layout_constraintTop_toBottomOf="@id/ev_option_tv"
                         app:layout_constraintBottom_toBottomOf="parent"
                         android:id="@+id/ev_option"
                         app:srcCompat="@drawable/ic_exposure"
                         android:layout_gravity="center"
                         android:background="#00000000"/>
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintBottom_toTopOf="@id/ev_option"
                      app:layout_constraintTop_toTopOf="parent"
                      tools:text="NULL"
                      android:paddingTop="5dp"
                      android:textColor="@color/manual_text_color"
                      tools:textColor="@color/White"
                      android:id="@+id/ev_option_tv"
                      android:layout_gravity="center"
                      android:textAlignment="center"
                      android:textSize="15sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>